<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/errors.css">
    <link rel="stylesheet" href="/assets/css/styleindex.css">
    <script defer type="text/javascript" src="/scripts/index.js"></script>
    <title></title>
  </head>
  <body>
    <!-- Navigation-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Capstone Knex</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <div class="nav-right">
            <a href="/developers/login">
              <button class="btn btn-outline-warning" type="button" id="devloginbutton">Developer Login</button>
            </a>
            <br>
            <a href="/businesses/login">
              <button class="btn btn-outline-warning" type="button" id="busloginbutton">Business Login</button>
            </a>
          </div>
        </div>
      </div>
    </nav>



    <!-- Login -->
    <div class="login-container col-6">

      <h1> Login </h1>
        <form action="/developers/login" method="post">
          <div class="form-group">
            <label for="email-login">Email address</label>
            <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp" placeholder="Email Address" name="email" required>
          </div>
          <div class="form-group">
            <label for="password-login">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Password" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>

      </div>

      <br>
      <% for (const err of errors.login) { %>
        <p class="warning"><%= err %></p>
      <% } %>

      <br>
      <hr>
      <br>

      <div class="register-container col-6">

        <h1> Register</h1>
          <form id="register" action="/developers/register" method="post">
            <br>
            <div class="form-group">
              <label for="name-input">Full Name</label>
              <input type="text" class="form-control" id="name-input" placeholder="Full Name" name="dev_name" required>
            </div>
            <div class="form-group">
              <label for="email-input">Email Address</label>
              <input type="email" class="form-control" id="email-input" placeholder="Email Address" name="email" required>
            </div>
            <div class="form-group">
              <label for="password-input">Password</label>
              <input type="password" class="form-control" id="password-input" placeholder="Password" name="password" required>
            </div>
            <div class="form-group">
              <label for="confirm-input">Confirm Password</label>
              <input type="password" class="form-control" id="confirm-input" aria-describedby="emailHelp" placeholder="Confirm Password" name="confirm" required>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
      </div>
      <br>
      <p id="mismatch" class="warning hidden">Passwords do not match</p>
        <% for (const err of errors.register) { %>
          <p class="warning"><%= err %></p>
        <% } %>
    </div>
  </body>
</html>
