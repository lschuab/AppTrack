<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Business Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/styleindex.css">
    <link rel="stylesheet" href="/assets/css/main.css">
  </head>
  <body>
    <!-- Navigation-->

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Capstone Knex</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a href="/logout">
            <button class="btn btn-outline-warning" type="button" id="devloginbutton">Logout</button>
          </a>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="header">Your Project Proposals</h1>
      <div class="projects">
        <% for (const project of projects) { %>
          <div class="card" style="width: 30rem;">
            <div class="card-body">
              <h3><%= project.company_name %></h3>
              <p class="card-text"><%= project.short_description %></p>
              <br>
              <p class="card-text"><b>Project Type:</b> <%= project.dev_type %></p>
              <p class="card-text"><b>Preferred Stack:</b> <%= project.stack_pref %></p>

              <a href="/projects/<%= project.id %>/business" class="btn btn-warning center" style="margin: auto;">Details</a>
            </div>
          </div>
        <% } %>

        <div class="card add" style="width: 30rem;">
          <div class="card-body center">
            <p class="card-text"></p>
            <a href="/projects/new" class="btn btn-warning center" style="margin: auto;">ADD A PROJECT</a>
          </div>
        </div>

          <!-- <button type="submit"><a class="new project" href="/newproject">New Project</a></button> -->

      </div>
    </div>



<!-- <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for projects"> -->

<script>
    function myFunction() {
        var input, filter, ul, li, a, i;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        ul = document.getElementById("myUL");
        li = ul.getElementsByTagName("li");
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("a")[0];
            if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }
</script>

  </body>
</html>
